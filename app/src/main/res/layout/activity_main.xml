<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:alpha="0.5"
       android:scaleType="centerCrop"
 />

    <Button
        android:id="@+id/ButtonStartLearn"
        android:drawableLeft="@drawable/learn_icon"
        android:text="@string/button_learn_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/button_main_activity"
        />

    <Button
        android:id="@+id/ButtonStartPlay"
        android:drawableLeft="@drawable/play_icon"
        android:text="@string/button_play_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ButtonStartLearn"
        android:enabled="false"
        style="@style/button_main_activity" />

    <EditText
        android:id="@+id/TextName"
        android:text="@string/Name"
        app:layout_constraintBottom_toTopOf="@+id/ButtonStartLearn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/name_text_style" />

    <TextView
        android:text="@string/Hello"
        app:layout_constraintBottom_toTopOf="@+id/TextName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/head_style" />


</androidx.constraintlayout.widget.ConstraintLayout>